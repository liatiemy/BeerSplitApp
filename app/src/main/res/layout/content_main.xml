<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tiemy.android.br.com.beersplitapp.MenuActivity"
    tools:showIn="@layout/app_bar_main"
    android:orientation="vertical"
    android:padding="6dp">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="@dimen/largura_logo_splash"
        android:layout_height="@dimen/altura_logo_splash"
        android:id="@+id/splash"
        android:background="@drawable/beersplit" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:padding="@dimen/activity_vertical_margin"
        android:text="@string/main"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/round_register"
            android:onClick="registry"/>

</LinearLayout>
